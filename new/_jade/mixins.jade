// Mach History Base
mixin modalRunes
    .modalRunes
        

mixin player
    a.playerLink(href='#')
        .player
            img.outChampTeam(src='http://placehold.it/30x30')
            .playerInfo
                p.outName 

mixin bluePlayer
    .player
        .champ
            img.outChampImg(src='http://ddragon.leagueoflegends.com/cdn/5.3.1/img/champion/Vayne.png')
        .spells
            img.outSpell1(src='../spell/4.png')
            img.outSpell2(src='../spell/11.png')
        .summonerInfo
            p.outBluePlayer Blue Player
            p.outMastery Página de Talentos (WIP)
            p.outRunePage Página de Runa (WIP)
            +modalRunes
        .stats
            p KDA
            p.outKDA --/--/-- (WIP)
        .outRankedStats
            img.outTierImg(src='../tier/GOLD_III.png')
            p.outTier GOLD III
            p.outRankedWins 32/27 Vitórias Ranked
            p.outNormalWinds --- (WIP) Vitórias Normal

mixin purplePlayer
    .player
        .champ
            img.outChampImg(src='http://ddragon.leagueoflegends.com/cdn/5.3.1/img/champion/Vayne.png')
